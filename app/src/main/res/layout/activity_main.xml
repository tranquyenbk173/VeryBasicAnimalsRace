<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <SeekBar
        android:id="@+id/seekBarBat"
        android:layout_width="297dp"
        android:layout_height="56dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="180dp"
        android:thumb="@drawable/bat"
        app:layout_constraintStart_toEndOf="@+id/radioGroup"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBarShark"
        android:layout_width="303dp"
        android:layout_height="118dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="76dp"
        android:thumb="@drawable/shark"
        app:layout_constraintStart_toEndOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/seekBarDog" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="58dp"
        android:layout_height="518dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="152dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonbat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radioButtondog"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radioButtonshark"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_weight="1" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="176dp"
        android:layout_height="124dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/textViewMark"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <SeekBar
        android:id="@+id/seekBarDog"
        android:layout_width="299dp"
        android:layout_height="129dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:thumb="@drawable/dog"
        app:layout_constraintStart_toEndOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/seekBarBat" />

    <TextView
        android:id="@+id/textViewMark"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="44dp"
        android:text="100"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="155dp"
        android:layout_height="156dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarDog"
        app:srcCompat="@drawable/play" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="219dp"
        android:layout_height="167dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="88dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#E47575"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarBat" />

</androidx.constraintlayout.widget.ConstraintLayout>